- if @friendship
  = link_to "Remove friend", friendship_path(@friendship), method: :delete
- else
  - if @friend_request
    - if @friend_request.sender != @user
      = link_to "Cancel friend request", friend_request_path(@friend_request), method: :delete, class: "px-3 py-1 text-gray-500 bg-gray-200 rounded shadow"
    - elsif @friend_request.sender == @user
      %div
        .text-md.flex-grow.text-center
          wants to be friends
        .inline-flex.mx-auto
          = link_to "Accept", accept_friend_request_path(id: @friend_request, user: @user), method: :post,
                    class: "bg-blue-400 text-white px-2 rounded hover:bg-blue-500 mx-3"
          = link_to "Decline", friend_request_path(@friend_request), method: :delete,
                    class: "bg-gray-300 text-white px-2 rounded hover:bg-gray-400"
  - else
    = link_to "Add friend", friend_requests_path(id: @user), method: :post, class: "bg-blue-400 px-3 py-2 text-white rounded shadow"